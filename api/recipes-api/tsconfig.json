    "dom",
    "dom.iterable",
    "esnext"
  ],                    
  "allowJs": true,
  "outDir": "build",                          
  //"rootDir": "src",
  "strict": true,         
  "noImplicitAny": true,
  "esModuleInterop": true,
  "resolveJsonModule": true
}
}


